{
  "name": "app-shell",
  "productName": "App Shell",
  "version": "1.0.1",
  "description": "An enterprise-grade, cross-platform Electron app shell with extension support",
  "main": "./dist/main/main.js",
  "homepage": "https://github.com/Lukeus/app-shell",
  "scripts": {
    "build": "pnpm run build:main && pnpm run build:renderer && pnpm run build:preload",
    "build:main": "cross-env NODE_ENV=production webpack --config webpack.main.config.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.config.js",
    "build:preload": "cross-env NODE_ENV=production webpack --config webpack.preload.config.js",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir .",
    "lint": "cross-env NODE_ENV=development eslint . --cache",
    "lint:fix": "cross-env NODE_ENV=development eslint . --cache --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "package": "pnpm run build && electron-builder",
    "package:dir": "pnpm run build && electron-builder --dir",
    "package:win": "pnpm run build && electron-builder --win",
    "package:mac": "pnpm run build && electron-builder --mac",
    "package:linux": "pnpm run build && electron-builder --linux",
    "package:all": "pnpm run build && electron-builder --win --mac --linux",
    "postinstall": "node scripts/postinstall.js",
    "dev": "pnpm run build && concurrently \"pnpm run start:renderer\" \"wait-on http://localhost:4000 && cross-env NODE_ENV=development electron ./dist/main/main.js\"",
    "start:main": "cross-env NODE_ENV=development electron ./dist/main/main.js",
    "start:renderer": "cross-env NODE_ENV=development webpack serve --config webpack.renderer.config.js",
    "start:prod": "cross-env NODE_ENV=production electron ./dist/main/main.js",
    "dev-quick": "pnpm build && cross-env NODE_ENV=development electron ./dist/main/main.js",
    "quick-start": "pnpm build:preload && concurrently \"pnpm run start:renderer\" \"wait-on http://localhost:4000 && cross-env NODE_ENV=development electron ./dist/main/main.js\"",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "screenshot": "pnpm run build && ts-node scripts/capture-screenshot.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=development eslint --cache"
    ],
    "*.json,.{eslintrc,prettierrc}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ],
    "*.{html,md,yml}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "build": {
    "productName": "App Shell",
    "appId": "com.lukeus.app-shell",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "directories": {
      "output": "release/build",
      "buildResources": "assets"
    },
    "extraResources": [
      "./assets/**"
    ]
  },
  "keywords": [
    "electron",
    "app-shell",
    "cross-platform",
    "extensions",
    "typescript"
  ],
  "author": {
    "name": "Luke Adams",
    "email": "luke@lukeus.dev",
    "url": "https://github.com/Lukeus"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lukeus/app-shell/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lukeus/app-shell.git"
  },
  "engines": {
    "node": ">=16.15.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "cross-env": "^10.0.0",
    "css-loader": "^7.1.2",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.36.0",
    "html-webpack-plugin": "^5.6.4",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "playwright": "^1.55.1",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "prettier": "^3.6.2",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "wait-on": "^9.0.1",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "monaco-editor": "^0.54.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zod": "^4.1.12"
  },
  "pnpm": {
    "overrides": {
      "dompurify": ">=3.2.4"
    }
  }
}
